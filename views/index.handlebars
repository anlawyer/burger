
<div class="header">
  <h1>Eat Da Burger!</h1>
  <img src="assets/img/burger.svg"/>
</div>

<main class="content">

  <div class="list-box">
    <div class="list-cell">
      <h2>Burgers yet to be eaten:</h2>

      <ul>
        {{#each burger}}
          {{#unless devoured}}
          <li>
            {{burger_name}}

            <button class="change-eaten" data-id="{{id}}">
              DEVOUR
            </button>

          </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="list-cell">
      <h2>Already eaten burgers:</h2>

      <ul>
        {{#each burger}}
          {{#if devoured}}
          <li>
            {{burger_name}}
          </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="form-box">

    <div class="form-cell">
      <h2>Add a Burger</h2>
      <form class='create-form'>

        <div class='form-group'>
          <label for='burgName'>Burger Name:</label>
          <input type='text' id='burgName' name='name'>
        </div>

        <button type='submit'>Add Burger</button>
      </form>
    </div>

  </div>
</main>

